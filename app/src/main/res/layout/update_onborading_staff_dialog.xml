<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/largeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Update Onboarding step"></TextView>
    <TextView
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/nomarlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Start date"></TextView>
    <EditText
        android:drawableRight="@drawable/calendar"
        android:id="@+id/idEdtStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Enter date" />
    <TextView
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/nomarlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Due day"></TextView>
    <EditText
        android:drawableRight="@drawable/calendar"
        android:id="@+id/idEdtDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Enter date" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_message"
        android:textColor="@color/danger"
        android:textSize="@dimen/nomarlText"
        ></TextView>
    <TextView
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/nomarlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Asign To"></TextView>
    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AutoCompleteTextView"
        android:completionThreshold="1"
        android:hint="Select Staff"
        android:completionHint="Select Staff"></AutoCompleteTextView>

</LinearLayout>
