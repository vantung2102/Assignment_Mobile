<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/border">
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/nomarlText"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="1"
                    android:id="@+id/txt_index"
                    android:background="@drawable/bg_green"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    ></TextView>
                <TextView
                    android:id="@+id/txt_property"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/largeText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Ipad"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Status: "
                    android:textSize="@dimen/nomarlText"></TextView>
                <TextView
                    android:textAlignment="center"
                    android:padding="@dimen/statusPadding"
                    android:textAllCaps="false"
                    android:textSize="@dimen/miniText"
                    android:layout_weight="6"
                    android:id="@+id/txtType"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/teal_200"
                    android:text="@string/provided"
                    android:background="@drawable/layout_rounded_border_green"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:padding="5dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/nomarlText"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Provider"
                    android:gravity="center"
                    ></TextView>
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=":"
                    android:textSize="@dimen/nomarlText"></TextView>
                <TextView
                    android:textStyle="italic"
                    android:id="@+id/txt_provider"
                    android:textSize="@dimen/nomarlText"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="adasdasdasdasdasdasdasdasdasdas"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/Receiver"
                    android:textSize="@dimen/nomarlText"></TextView>
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=":"
                    android:textSize="@dimen/nomarlText"></TextView>
                <TextView
                    android:text="adasdasdasdasdasdasdasdasdasdas"
                    android:textStyle="italic"
                    android:id="@+id/txt_receiver"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/nomarlText"></TextView>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/showBtn"
                        android:src="@drawable/eye"
                        android:layout_width="@dimen/action_button"
                        android:layout_height="@dimen/action_button"></ImageView>
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/deleteBtn"
                        android:src="@drawable/deletetrash"
                        android:layout_width="@dimen/action_button"
                        android:layout_height="@dimen/action_button"></ImageView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>