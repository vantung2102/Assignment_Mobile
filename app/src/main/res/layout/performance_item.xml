<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/nomarlText"
            android:layout_centerVertical="true"
            android:id="@+id/txt_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"></TextView>
    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/nomarlText"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/txt_stt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_name"
            android:text="txt_departmentName"></TextView></LinearLayout>
    <LinearLayout android:background="@drawable/layout_rounded_border_red"
        android:padding="5dp"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">
        <TextView

            android:textAlignment="center"
            android:textColor="@color/toast_failed_bold"
            android:textSize="@dimen/miniText"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@id/txt_stt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_status"
            android:text="In progress"></TextView></LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:background="@color/pending"
            android:textAllCaps="false"
            android:textSize="@dimen/miniText"
            android:text="@string/REMIND"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>
</LinearLayout>