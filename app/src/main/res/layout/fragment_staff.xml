<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".DepartmentFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/btn_add"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/botron"
                >
                <TextView
                    android:textSize="@dimen/nomarlText"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+ Add Staff"></TextView>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edtStaffName"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textColorHint="@color/hintColorGray"
                android:hint="Employee Name"
                android:textSize="@dimen/miniText"
                android:layout_width="match_parent"
                android:background="@drawable/custom_edit_text_blue"
                android:layout_height="50dp">

            </EditText>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/rlSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <AutoCompleteTextView
            android:drawableRight="@drawable/down"
            android:id="@+id/edtDepartments"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textColorHint="@color/hintColorGray"
            android:hint="Select Departments"
            android:textSize="@dimen/miniText"
            android:layout_width="match_parent"
            android:background="@drawable/custom_edit_text_blue"
            android:layout_height="50dp"></AutoCompleteTextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:drawableRight="@drawable/down"
                android:id="@+id/edtPositions"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textColorHint="@color/hintColorGray"
                android:hint="Select Positions"
                android:textSize="@dimen/miniText"
                android:layout_width="match_parent"
                android:background="@drawable/custom_edit_text_blue"
                android:layout_height="50dp"></AutoCompleteTextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:drawableRight="@drawable/down"
                android:id="@+id/edtJobtitle"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textColorHint="@color/hintColorGray"
                android:hint="Select Job Titles"
                android:textSize="@dimen/miniText"
                android:layout_width="match_parent"
                android:background="@drawable/custom_edit_text_blue"
                android:layout_height="50dp"></AutoCompleteTextView>
        </RelativeLayout>
        <Button
            android:textSize="@dimen/nomarlText"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_search"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Search"></Button>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="10"
            android:background="@color/blue"
            >
            <TextView
                android:textSize="@dimen/nomarlText"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/txt_index"
                android:textAlignment="center"
                android:text="ID"></TextView>
            <TextView
                android:textSize="@dimen/nomarlText"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_weight="2"
                android:id="@+id/txt_avar"
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Avar"></TextView>
            <TextView
                android:textSize="@dimen/nomarlText"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_weight="3"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/txt_avar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_departmentName"
                android:text="Name"></TextView>
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/nomarlText"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Action"></TextView>
            </LinearLayout>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcv_departments"
            ></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>


</FrameLayout>