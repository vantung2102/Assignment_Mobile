<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:layout_marginBottom="10dp">
    <TextView
        android:layout_gravity="center"
        android:id="@+id/txt_stt"
        android:textSize="@dimen/nomarlText"
        android:textColor="@color/black"
        android:text="1"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"></TextView>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/txt_name"
        android:textSize="@dimen/nomarlText"
        android:textColor="@color/blue"
        android:text="Trần Quốc Đạt"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"></TextView>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:padding="@dimen/statusPadding"
            android:id="@+id/btn_status"
            android:layout_gravity="center_vertical"
            android:textColor="@color/teal_200"
            android:text="@string/AVAIABLE"
            android:background="@drawable/layout_rounded_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_show"
            android:textSize="@dimen/miniText"
            android:textColor="@color/black"
            android:text="@string/VIEW"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <ImageView
            android:id="@+id/btn_more"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/more"></ImageView>
    </LinearLayout>

</LinearLayout>