<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".StaffProfileFragment">
    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:background="@drawable/border">
            <LinearLayout
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="1"
                        android:id="@+id/txt_index"
                        android:background="@drawable/bg_green"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        ></TextView>
                    <TextView
                        android:id="@+id/txt_task_name"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/largeText"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="task abc"
                        ></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Status: "
                        android:textSize="@dimen/nomarlText"></TextView>
                    <TextView
                        android:padding="@dimen/statusPadding"
                        android:id="@+id/txt_status"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:background="@drawable/layout_rounded_border_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/toast_failed_bold"
                        android:text="@string/outstanding"
                        android:textSize="@dimen/miniText"></TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/nomarlText"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assign To: "
                        android:gravity="center"
                        ></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_assignto"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/nomarlText"></TextView>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/nomarlText"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start: "
                        android:gravity="center"
                        ></TextView>
                    <TextView
                        android:id="@+id/txt_start_date"
                        android:textSize="@dimen/nomarlText"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        ></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="To: "
                        android:textSize="@dimen/nomarlText"></TextView>
                    <TextView
                        android:id="@+id/txt_end_date"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/nomarlText"></TextView>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    >
                    <RadioButton
                        android:padding="5dp"
                        android:layout_marginRight="50dp"
                        android:layout_width="@dimen/action_button"
                        android:layout_height="@dimen/action_button"></RadioButton>
                    <ImageView
                        android:id="@+id/img_edit"
                        android:layout_marginRight="50dp"
                        android:src="@drawable/edit"
                        android:layout_width="@dimen/action_button"
                        android:layout_height="@dimen/action_button"></ImageView>
                    <ImageView
                        android:id="@+id/img_delete"
                        android:src="@drawable/deletetrash"
                        android:layout_width="@dimen/action_button"
                        android:layout_height="@dimen/action_button"></ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</FrameLayout>