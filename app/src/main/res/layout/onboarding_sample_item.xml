<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">
    <TextView
        android:layout_gravity="center"
        android:id="@+id/txt_stt"
        android:textSize="@dimen/nomarlText"
        android:textColor="@color/black"
        android:text="1"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"></TextView>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/txt_name"
        android:textSize="@dimen/nomarlText"
        android:textColor="@color/blue"
        android:text="Trần Quốc Đạt"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"></TextView>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/txt_total_day"
        android:textSize="@dimen/nomarlText"
        android:textColor="@color/black"
        android:text="0"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"></TextView>
    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        >
        <ImageButton
            android:layout_centerVertical="true"
            android:src="@drawable/edit_mini"
            android:id="@+id/btn_show"
            android:textSize="@dimen/miniText"
            android:textColor="@color/black"
            android:layout_width="50dp"
            android:layout_height="50dp"
            ></ImageButton>
        <ImageButton
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_delete"
            android:textSize="@dimen/miniText"
            android:textColor="@color/black"
            android:src="@drawable/deletetrash"
            android:layout_width="50dp"
            android:layout_height="50dp"
            ></ImageButton>
    </RelativeLayout>

</LinearLayout>