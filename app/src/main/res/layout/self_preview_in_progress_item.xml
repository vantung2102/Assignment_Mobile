<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/border">
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/nomarlText"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="1"
                    android:id="@+id/txt_index"
                    android:background="@drawable/bg_green"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    ></TextView>
                <TextView
                    android:id="@+id/txt_name"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/largeText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Irvin Ebert"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Status: "
                    android:textSize="@dimen/nomarlText"></TextView>
                <TextView
                    android:textAlignment="center"
                    android:padding="@dimen/statusPadding"
                    android:textSize="@dimen/miniText"
                    android:layout_weight="6"
                    android:id="@+id/txt_status"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/teal_200"
                    android:text="@string/pending"
                    android:background="@drawable/layout_rounded_border_green"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/nomarlText"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Start"
                    android:gravity="center"
                    ></TextView>
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=":"
                    android:textSize="@dimen/nomarlText"></TextView>
                <TextView
                    android:textStyle="italic"
                    android:id="@+id/txt_start_date"
                    android:textSize="@dimen/nomarlText"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/END"
                    android:textSize="@dimen/nomarlText"></TextView>
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=":"
                    android:textSize="@dimen/nomarlText"></TextView>
                <TextView
                    android:textStyle="italic"
                    android:id="@+id/txt_end_date"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/nomarlText"></TextView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>