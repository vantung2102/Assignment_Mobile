<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaveFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/relativeMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:id="@+id/btn_add"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botron"
                    >
                    <TextView
                        android:textSize="@dimen/nomarlText"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+ Add Onboarding Sample"></TextView>
                </LinearLayout>
            </RelativeLayout>
            <AutoCompleteTextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:drawableRight="@drawable/down"
                android:id="@+id/AutoCompleteTextViewSelectStatus"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="textStart"
                android:textColorHint="@color/hintColorGray"
                android:hint="Select Positions"
                android:textSize="@dimen/miniText"
                android:layout_width="match_parent"
                android:background="@drawable/custom_edit_text_blue"
                android:layout_height="50dp"></AutoCompleteTextView>
            <LinearLayout
                android:padding="10dp"
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/nomarlText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="STT"></TextView>
                <TextView
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="@dimen/nomarlText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textAlignment="center"
                    android:text="Position"></TextView>
                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/nomarlText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:text="Task"></TextView>
                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/nomarlText"
                    android:textAlignment="center"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Action"></TextView>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:id="@+id/rcv_leave"
                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </RelativeLayout>



</FrameLayout>